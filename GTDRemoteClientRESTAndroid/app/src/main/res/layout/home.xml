<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <Button
            android:id="@+id/btnCats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mostrar categorías del usuario"
            android:onClick="showCats" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_margin="20dp"/>

        <EditText
            android:id="@+id/cat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Introduzca el id de una categoría"
            android:gravity="center_horizontal"
            android:inputType="number"/>

        <Button
            android:id="@+id/btnTasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mostrar tareas de la categoría"
            android:onClick="showTasks" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_margin="20dp"/>

        <EditText
            android:id="@+id/task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Introduzca el id de una tarea"
            android:gravity="center_horizontal"
            android:inputType="number"/>

        <Button
            android:id="@+id/btnMark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Marcar tarea como finalizada"
            android:onClick="markAsFinished" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_margin="20dp"/>

        <Button
            android:id="@+id/btnCreateTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear tarea"
            android:onClick="createTask" />

    </LinearLayout>

</ScrollView>